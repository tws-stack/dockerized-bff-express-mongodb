{
  "name": "dockerlized-bff",
  "version": "1.0.0",
  "description": "A demo to show how to build a dockerlized Node.js development environment.",
  "main": "app.js",
  "repository": "git@github.com:tws-stack/dockerlized-bff.git",
  "author": "ThoughtWorks School <school-support@thoughtworks.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "nodemon --debug=5858 ./bin/www",
    "debug": "DEBUG=dockerlized-bff:* npm start",
    "test": "standard && NODE_ENV=test nodemon -x mocha ./tests/*",
    "it": "standard && NODE_ENV=test nodemon -x mocha ./tests/integration-tests/*",
    "ut": "standard && NODE_ENV=test nodemon -x mocha ./tests/unit-tests/*",
    "it-ci": "standard && mocha ./tests/integration-tests/*",
    "ut-ci": "standard && mocha ./tests/unit-tests/*"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.6",
    "express": "^4.15.2",
    "mongoose": "^4.9.9",
    "morgan": "^1.8.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "standard": "^10.0.2",
    "supertest": "^3.0.0",
    "testdouble": "^2.1.2"
  }
}
